#!/usr/bin/env ruby
$-w = true

if ARGV.size != 1
  $stderr.puts "Usage: GetSourceFiles <distribution>"
  exit(1)
end

"main multiverse restricted universe".split.each do |type|
  r = system("wget \"http://archive.ubuntu.com/ubuntu/dists/#{ARGV[0]}/#{type}/source/Sources.bz2\" -O - | bzip2 -dc")
  if not r
    $stderr.puts "Error getting #{ARGV[0]}/#{type}"
    exit 1
  end
end
